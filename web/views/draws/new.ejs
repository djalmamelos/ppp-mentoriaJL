<%- include('../partials/header') %>

<div class="container">
  <h1 class="title">Registrar Sorteio de Prêmio</h1>

  <% if (error) { %>
    <div class="notification is-danger">
      <%= error %>
    </div>
  <% } %>

  <% if (!unitId) { %>
    <div class="notification is-warning">
      É necessário selecionar uma unidade de prêmio para registrar o sorteio.
      <br>
      <a href="/prizes" class="button is-small is-warning mt-2">Voltar para Lista de Prêmios</a>
    </div>
  <% } else { %>
  <form action="/draws" method="POST">
    <input type="hidden" name="unitId" value="<%= unitId %>">

    <div class="field">
      <label class="label">Gênero</label>
      <div class="control">
        <div class="select">
          <select name="gender" required>
            <option value="">Selecione o gênero</option>
            <option value="M">Masculino</option>
            <option value="F">Feminino</option>
            <option value="O">Outro</option>
          </select>
        </div>
        <p class="help">Gênero do ganhador(a)</p>
      </div>
    </div>

    <div class="field">
      <label class="label">Bairro</label>
      <div class="control">
        <input class="input" type="text" name="neighborhood" placeholder="Digite o bairro do ganhador(a)" required>
      </div>
    </div>

    <div class="field">
      <label class="label">Programa</label>
      <div class="control">
        <input class="input" type="text" name="program" placeholder="Digite o nome do programa de rádio" required>
        <p class="help">Programa onde o prêmio foi sorteado</p>
      </div>
    </div>

    <div class="field">
      <label class="label">Idade</label>
      <div class="control">
        <input class="input" type="number" name="age" min="0" max="120" placeholder="Digite a idade do ganhador(a)" required>
        <p class="help">Idade do ganhador(a) para estatísticas</p>
      </div>
    </div>

    <div class="field is-grouped">
      <div class="control">
        <button type="submit" class="button is-primary">
          <span class="icon">
            <i class="fas fa-check"></i>
          </span>
          <span>Registrar Sorteio</span>
        </button>
      </div>
      <div class="control">
        <a href="/prizes" class="button is-light">
          <span class="icon">
            <i class="fas fa-times"></i>
          </span>
          <span>Cancelar</span>
        </a>
      </div>
    </div>
  </form>
  <% } %>
</div>

<%- include('../partials/footer') %>